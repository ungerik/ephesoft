<!DOCTYPE ui:UiBinder 
  SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent"
>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:core='urn:import:com.ephesoft.dcma.gwt.core.client.view'>

	<ui:style>
		.tabBorder {
		border-bottom-color: #92c1f0;
		border-bottom-style: solid;
		}
	</ui:style>


	<g:DockLayoutPanel height="100%">
		<g:north size="50">
			<g:FocusPanel height="100%" width="100%" ui:field="logoFocusPanel">
				<g:HorizontalPanel ui:field="signoutPanel">
					<g:cell>
						<g:HTMLPanel ui:field="htmlPanel">
							<div width='10%'>
								<g:Label ui:field="logo" />
							</div>
						</g:HTMLPanel>
					</g:cell>
					<g:cell horizontalAlignment="ALIGN_RIGHT">
						<g:HorizontalPanel>
							<g:cell>
								<g:Label ui:field='themeIcon'></g:Label>
							</g:cell>
							<g:cell>
								<g:Label ui:field='userName' />
							</g:cell>
							<g:cell>
								<g:Anchor href='javascript:;' ui:field='helpLink'></g:Anchor>
							</g:cell>
							<g:cell>
								<g:Anchor href='javascript:;' ui:field='signOutLink'></g:Anchor>
							</g:cell>
						</g:HorizontalPanel>
					</g:cell>
				</g:HorizontalPanel>
			</g:FocusPanel>
		</g:north>
		<g:center>
			<g:FocusPanel height='100%' width='100%'>
				<g:HorizontalPanel width="100%" height="100%">
					<g:cell verticalAlignment="ALIGN_TOP" horizontalAlignment="ALIGN_LEFT"
						width="100%" height="100%">
						<g:TabBar ui:field="tabBar" />
					</g:cell>
				</g:HorizontalPanel>
			</g:FocusPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
